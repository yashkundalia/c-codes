#include <iostream>
#include <map>
#include <iterator>
#include <vector>
#include <string>
#include <algorithm>
#include<utility>
#include<climits>



using namespace std;

int main()
{
    long long int  ans =0;
    int n,m;
    cin >>n >> m;
    vector<int> v(m);
    for(int i=0;i<m;i++)
    {
        cin>>v[i];
    } 
    ans +=v[0] - 1;
    for(int i=1;i<m;i++)
    {
        //cout<<ans<<endl;
        if(v[i]  <v[i-1])
        {
            ans +=n-v[i-1] + v[i] ;
        }
        else
        {
            ans += v[i] - v[i-1];
        }
        
    }
    cout<< ans<<endl;
    return 0;



}

