void solve()
{
    ll n,k;
    cin>>n>>k;
    if(k==1)
    {
        cout<<1<<endl;
        return;
    }
    //ll ans = 1;
    ll ans =0;
    /*for(ll i=32;i>=0;i--)
    {
        cout<<(1ll<<i)<<endl;
    }*/
    for(ll i=32;i>=0;i--)
    {
        ll check =  (1ll<<i);
        if((k&check) == 0) continue;
        //cout<<check<<"check"<<endl;
        //cout<<(k&check)<<"and"<<endl;
        ans = (ans%NUM + binpow(n,i))%NUM;
        //cout<<binpow(n,i)<<"  n "<<n<<" "<<i<<endl;
        
    }
    cout<<ans<<endl;

}



int main()
{
    //freopen("input.txt", "r", stdin);
    //freopen("output.txt", "w", stdout);
    
    int t ;
    cin>>t;
    while(t--)
    {
        solve();
    }
    return 0;
}

