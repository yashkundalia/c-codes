#define ull unsigned long long
#define ll long long
#define NUM 1000000007
//ll mod  = 1000000007;
using namespace std;



ll binpow(ll x, ll y)
{
    ll res = 1ll; // Initialize result
  
    while (y > 0ll) {
        // If y is odd, multiply x with result
        if (y & 1ll)
            res = ((res%NUM) * (x%NUM))%NUM;
  
        // y must be even now
        y = y >> 1; // y = y/2
        x = ((x%NUM) * (x%NUM))%NUM; // Change x to x^2
    }
    return res%NUM;
}

bool sortbysec(pair<ll,ll> &a , pair<ll,ll> &b)
{
    if(a.first == b.first)
    {
        return (a.second <= b.second);
    }
    return (a.first < b.first) ;
}

int func(char c,string s)
{
    if(s.size() == 1)
    {
        if(s[0] == c) return 0;
        else return 1;
    }
    int mid = s.size()/2 ;

    int c1 =  func(c+1,string(s.begin()+mid ,s.end())) ;
    c1+=mid - count(s.begin() ,s.begin() + mid , c)  ;
    int c2 = func(c+1,string(s.begin() ,s.begin() + mid)) ;
    c2+= mid - count(s.begin() +mid ,s.end() , c)  ;
     return min(c1,c2);


}

void solve()
{
    int n;
