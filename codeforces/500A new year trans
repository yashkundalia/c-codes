#include <iostream>
#include <map>
#include<unordered_map>
#include <iterator>
#include <vector>
#include <string>
#include <algorithm>
#include<utility>
#include<climits>



using namespace std;

vector<bool> visited ; 
vector<vector<int > > adj;
void dfs(int v )
{
    visited[v] = true;
    for(auto i : adj[v])
    {
        if(!visited[i])
        {
            dfs(i);
        }
    }
    return;
}

int main()
{
    int n ,t;
    cin>>n>>t;
    visited.resize(n+1,false);
    vector<int> v;
    adj.resize(n+1);
    for(int i=0;i<n-1;i++)
    {
        //v.push_back()
        int a;
        cin>>a;
        adj[i+1].push_back(i+1+a);
    }
    dfs(1);
    if(visited[t]) cout<<"YES"<<endl;
    else cout << "NO"<<endl;
    return 0;



}

