int decide(int f, int s,int rem)
{
    //int rem = 10 -f -s;
    /*if(rem%2 == 0)
    {
        s += rem/2;
    }
    else
    {
        //rem = rem -1;
        s+= rem/2 + rem%2 ;
    }
    */
    s += rem/2 + rem%2 ;
    if(f > s) return 1;
    else return 0;

}

int decide2(int f, int s,int rem)
{
    //int rem = 10 -f -s;

    
    f += rem/2;
    if(s > f) return 1;
    else return 0;

}

void solve()
{
    string s;
    cin>>s;
    int ques =0;
    int first =0;
    int second =0;
    /*for(int i = 1;i<=10;i++)
    {
        if(s[i-1] == '?') ques++;
        else
        {
            if(s[i-1] == 1)
            {
                if(i%2 == 0) second++;
                else first++;
            }
        }
    }*/
    int res =0;
    int ans = 10;
    for(int i=1;i<=10;i++)
    {
        if(s[i-1] == '?')
        {
            if(i%2 == 1) first++;
        }
        else if(s[i-1] == '1')
        {
            if(i%2 == 0) second++;
            else first++;
        }
        if(1)
        {
            if(decide(first,second,10-i) == 1)
            {
                ans = min(ans,i);
                //return;
            }
        }
        
    }
    first =0;
    second =0;

    for(int i=1;i<=10;i++)
    {
        if(s[i-1] == '?')
        {
            if(i%2 == 0) second++;
        }
        else if(s[i-1] == '1')
        {
            if(i%2 == 0) second++;
            else first++;
        }
        if(1)
        {
            if(decide2(first,second,10-i) == 1)
            {
                ans = min(ans,i);
                //return;
            }
        }
        
    }
    cout<<ans<<endl;
    return;


}



int main()
{
    
    /*freopen("input.txt", "r", stdin);
    freopen("output.txt", "w", stdout);*/
    
    int t ;
    cin>>t;
    while(t--)
    {
        solve();
    }
    return 0;
}

