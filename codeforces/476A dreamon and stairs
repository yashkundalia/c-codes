#include <iostream>
#include <map>
#include<unordered_map>
#include <iterator>
#include <vector>
#include <string>
#include <algorithm>
#include<utility>
#include<climits>
#include<stack>


using namespace std;




int main()
{
    int n,m;
    cin>> n >> m;
    int steps = n/2 + n%2;
    for(int i = steps;i<=n;i++)
    {
        if(i%m == 0 )
        {
            cout<<i<<endl;
            return 0;
        }
    }
    cout<<-1 <<endl;  
    return 0;
}

