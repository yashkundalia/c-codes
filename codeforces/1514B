int get(int n, int m)
{
    if((m&n) == n) return 0;
    /*if(n>=m)
    {
        swap(n,m) ;
    }*/
    int ans = 0;
    for(int i=29;i>=0;i--)
    {
        int num  = (1<<i);
        //cout<<num<<"num"<<endl;
        if((n&num) !=0)
        {
            if((m&num) == 0)
            {
                //cout<<num<<"1"<<endl;
                ans+= num;
            }
        }
    }
    return ans;
}

void solve()
{
    int n,k;
    cin>>n>>k;
    cout<<binpow(n,k)<<endl;
    return;
}



int main()
{
    
    /*freopen("input.txt", "r", stdin);
    freopen("output.txt", "w", stdout);*/
    int t ;
    cin>>t;
    while(t--)
    {
        solve();
    }
    return 0;
}

