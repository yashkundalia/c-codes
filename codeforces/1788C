#define ull unsigned long long
#define ll long long
#define NUM 998244353
//ll mod  = 1000000007;
using namespace std;



ll binpow(ll x, ll y)
{
    ll res = 1ll; // Initialize result
  
    while (y > 0ll) {
        // If y is odd, multiply x with result
        if (y & 1ll)
            res = ((res%NUM) * (x%NUM))%NUM;
  
        // y must be even now
        y = y >> 1; // y = y/2
        x = ((x%NUM) * (x%NUM))%NUM; // Change x to x^2
    }
    return res%NUM;
}

bool sortbysec(pair<ll,ll> &a , pair<ll,ll> &b)
{
    if(a.first == b.first)
    {
        return (a.second <= b.second);
    }
    return (a.first < b.first) ;
}
 
int binarysearch(vector<int> v, int find,int l, int r)
{
    if(find<v[l] or find > v[r]) 
    {
        return -1;
    }
    while(l<=r)
    {
        int mid  = l + (r-l)/2 ;
        if(v[mid] == find) return mid;
        if(v[mid]  > find) r = mid -1;
        else l =mid +1;
    }
    return -1;
}
int fact(int x)
{
    if(x<=1) return 1;
    int start =1;
    int ans =1;
    while(start<=x)
    {
        ans = ans*start;
        start++;
    }
    return ans;
}
bool isvalid(ll i , ll j ,ll n,ll m)
{
    if(i<0 or i> n-1 or j<0 or j> m-1)
    {
        return false;
    }
    return true;
}
void dfs(vector<vector<int> > &adj, vector<bool> &check, int i)
{
    if(check[i]) return;
    check[i] = true;
    for(auto j : adj[i])
    {
        if(!check[j]) dfs(adj,check,j) ;
    }
    return;
}
void solve()
{
    int n;
    cin>>n;
    if(n%2 == 0)
    {
        cout<<"NO"<<endl;
        return;
    }
    cout<<"YES"<<endl;
    int x = 3*(n+1)/2;
    vector<bool> check(2*n+1,false);
    vector<bool> nums(n,false);
    int end = x + n-1;
    int start = 1;
    int i = 1;
    int temp = x;
    while(x<=end)
    {
        cout<<i<<" "<<x-i<<endl;
        check[i] =true;
        check[x-i] =true;
        nums[x-temp] = true;
        x+=2;
        i++;
    }
    for(int j=0;j<n;j++)
    {
        if(nums[j] == false)
        {
            int req = j + temp;
            cout<<i<<" "<<req - i<<endl;
            i++;
            nums[j]=true;
        }
    }
    return;




}



    

int main()
{
    

    int t ;
    cin>>t;
    //t=1;
    while(t--)
    {
    
        solve();
    }
    return 0;
    
}
