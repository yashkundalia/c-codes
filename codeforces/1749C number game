#define ull unsigned long long
#define ll long long
//#define NUM 1000000001
ull mod  = 998244353;
using namespace std;

ull binpow(ull a,ull b ,ull mod)
{
    if(b==0)return 1;
    ull res =1;
    while(b > 0)
    {
        if(b%2)
        {
            res = ((res%mod)*(a%mod))%mod;
            b--;
        }
        else
        {
            a = ((a%mod)*(a%mod))%mod;
            b /=2;
        }
    }
    return res;
}

