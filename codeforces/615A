#define ull unsigned long long
#define ll long long
#define NUM 1000000007
//ull mod  = 998244353;
using namespace std;


bool sortbysec(pair<ll,ll> &a , pair<ll,ll> &b)
{
    return (a.second >= b.second) ;
}

void solve()
{
    
   ll a,b,c,n;
   cin>>a>>b>>c>>n;
   if((a+b+c+n) % 3 != 0) 
    {
        cout<<"NO"<<endl;
        return;
    }
   ll num = (a+b+c+n)/3;
   if(a>num or b > num or c > num)
    {
        cout<<"NO"<<endl;
        return;
    }
    if(a+n < num or b +n < num or c + n < num)
    {
        cout<<"NO"<<endl;
        return;
    }
    cout<<"YES"<<endl;
    return;


}


int main()
{
    
    int t ;
    cin>>t;
    while(t--)
    {
        solve();
    }
    return 0;
}

