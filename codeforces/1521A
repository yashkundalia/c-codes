#include <iostream>
#include <map>
#include<unordered_map>
#include <iterator>
#include <vector>
#include <string>
#include <algorithm>
#include<utility>
#include<climits>
#include<stack>

#define ull unsigned long long
#define ll long long

using namespace std;




int main()
{
    ull t;
    cin>>t;
    while(t--)
    {
        ull a,b;
        cin>>a>>b;
        if(b==1)
        {
            cout<<"NO"<<endl;
            continue;
        }
        if(b==2) b*=2;
        cout<<"YES"<<endl;
        cout<<a*1<<" "<<a*(b-1)<<" "<<a*b<<endl;
    }
    return 0;
}

