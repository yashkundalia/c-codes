#include <iostream>
#include <map>
#include<unordered_map>
#include <iterator>
#include <vector>
#include <string>
#include <algorithm>
#include<utility>
#include<climits>
#include<stack>

#define ull unsigned long long
#define ll long long
//#define NUM 1000000001
//ull mod  = 998244353;
using namespace std;

long long get(int x) 
{
    return x * 1ll * (x + 1) / 2;
}
int main()
{
    int t;
    cin >> t;
    while (t--) 
    {
        ll n,a,b;
        cin>>n>>a>>b;
        vector<ll> v;
        for(ll i=0;i<n;i++)
        {
            ll temp;
            cin>>temp;
            v.push_back(temp);
        }
        ll ans = 0;
        for(ll i=0;i<n;i++)
        {
            ans +=v[i];
        }
        ans *=b;
        ll capital = 0;
        ll index = 0;
        for(ll i=0;i<n;i++)
        {
            if((v[i] - capital)* a < (v[i] - capital) * b *(n-index - 1))
            {
                ans = ans + (v[i] - capital)* a - (v[i] - capital) * b*(n-index - 1) ;
                capital = v[i];
                //cout<<capital<<"capital"<<endl;
                index = i + 1;
            }
            else continue;
        }
        cout<<ans<<endl;    
    }
    
    return 0;
}
