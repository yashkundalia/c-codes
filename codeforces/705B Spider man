#include <iostream>
#include <map>
#include<unordered_map>
#include <iterator>
#include <vector>
#include <string>
#include <algorithm>
#include<utility>
#include<climits>
#include<stack>

#define ull unsigned long long
#define ll long long

using namespace std;




int main()
{
    ll n;
    cin>>n;
    vector<ll> v(n,0);
    for(ll i=0;i<n;i++)
    {
        ll temp;
        cin>>temp;
        v[i] =temp;
    }
    ll sum =0;

    for(ll i=0;i<n;i++)
    {
        sum +=v[i] -1 ;
        if(sum%2 == 0 ) cout<<2<<endl;
        else cout<<1<<endl;
    }
    return 0;
}

