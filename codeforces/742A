using namespace std;




int main()
{
    int n ;
    cin>>n;
    if(n==0) cout<<1<<endl;
    else if((n-1)%4 == 0) 
    {
        cout<<8<<endl;
    }
    else if((n-2)%4 ==0) cout<<4<<endl;
    else if((n-3)%4 == 0) cout<<2<<endl;
    else
    {
        cout<<6<<endl;
    }
    //for(int i=0;i)
    return 0;
}

